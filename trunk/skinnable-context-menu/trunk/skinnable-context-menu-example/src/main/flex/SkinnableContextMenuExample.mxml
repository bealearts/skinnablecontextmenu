<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="955" minHeight="600"
	xmlns:ui="com.bealearts.menu.*"
>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<ui:SkinnableContextMenu enabled="{menuEnabled.selected}" showDefaultItems="{defaultItems.enabled}"
                showClipboardItems="{clipboardItems.selected}"/>
	</fx:Declarations>

	<s:layout>
		<s:VerticalLayout />
	</s:layout>

    <s:HGroup>
        <s:CheckBox id="menuEnabled" label="Skinnable Context Menu enabled" selected="true" />
        <s:CheckBox id="defaultItems" label="Show default context menu items" selected="true" />
        <s:CheckBox id="clipboardItems" label="Show Clipboard context menu items" selected="true" />
    </s:HGroup>
	
	<s:TextArea>
		
	</s:TextArea>
	
	<s:TextInput>
		
	</s:TextInput>
	
</s:Application>
